<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Remove real Action bar so we can draw above it -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Merge real action bar system action s(copy/paste) into the fake one -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActionButton" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/font_regular_on_color</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="PageLoader">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
